<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.workbei.dao.app.WbOuterDataAppDao">

    <insert id="saveOrUpdate" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO outer_data_app (version,
                                    `name`,
                                    `key`,
                                    token,
                                    `white_ip_list`,
                                    `note`,
                                    root_dept_id)
        VALUES (0,
                #{name},
                #{key},
                #{token},
                #{whiteIpList},
                #{note},
                #{rootDeptId})
        ON DUPLICATE KEY UPDATE version=version + 1
    </insert>
    <delete id="deleteById">
        DELETE
        FROM outer_data_app
        <![CDATA[
        WHERE id = #{id}
        ]]>
    </delete>
    <delete id="deleteOuterDataAppByKey">
        DELETE
        FROM outer_data_app
        <![CDATA[
        WHERE `key` = #{key}
        ]]>
    </delete>
    <resultMap id="outerDataAppMap" type="com.workbei.model.domain.user.WbOuterDataAppDO">
        <id property="id" column="id"/>
        <result property="version" column="version"/>
        <result property="name" column="name"/>
        <result property="key" column="key"/>
        <result property="token" column="token"/>
        <result property="whiteIpList" column="white_ip_list"/>
        <result property="note" column="note"/>
        <result property="rootDeptId" column="root_dept_id"/>
    </resultMap>
    <sql id="select-all-fields">
        id,
        version,
        `name`,
        `key`,
        token,
        `white_ip_list`,
        `note`,
        root_dept_id
    </sql>
    <select id="getById" resultMap="outerDataAppMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM outer_data_app
        <![CDATA[
			WHERE id=#{id}
		 ]]>
    </select>
    <select id="getOuterDataAppByToken" resultMap="outerDataAppMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM outer_data_app
        <![CDATA[
			WHERE token=#{token}
		 ]]>
    </select>
    <select id="getOuterDataAppByKey" resultMap="outerDataAppMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM outer_data_app
        <![CDATA[
			WHERE `key`=#{key}
		 ]]>
    </select>
</mapper>